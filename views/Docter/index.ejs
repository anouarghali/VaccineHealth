<%- include('../partials/Header') %>
<%- include('./partials/header') %>
            <div class="container-fluid">
               <div class="row">
                  <div class="col-sm-12">
                     <div class="row">
                        <div class="col-md-6 col-lg-4">
                           <div class="iq-card iq-card-block iq-card-stretch iq-card-height">
                              <div class="iq-card-body">
                                 <div class="iq-progress-bar progress-bar-vertical iq-bg-primary">
                                       <span class="bg-primary" data-percent="70"></span>
                                   </div>
                                 <span class="line-height-4"> <%- docter.patients.length - docter.completedVaccinations.length %> </span>
                                 <h4 class="mb-2 mt-2">Enfants inscrits</h4>
                                 <p class="mb-0 text-secondary line-height">*******</p>
                              </div>
                           </div>
                        </div>
                        <div class="col-md-6 col-lg-4">
                           <div class="iq-card iq-card-block iq-card-stretch iq-card-height">
                              <div class="iq-card-body">
                                 <div class="iq-progress-bar progress-bar-vertical iq-bg-danger">
                                    <% if(  docter.patients.length == 0 ){ %>
                                       <% var p2 = 0; %>
                                    <% }else { %>
                                       <%   var p2 =80 %>
                                    <%  } %>
                                       <span class="bg-danger" data-percent="<%=p2%>"></span>
                                   </div>
                                 <span class="line-height-4"> <%= docter.patients.length %> </span>
                                 <h4 class="mb-2 mt-2">Vaccins en cours</h4>
                                 <p class="mb-0 text-secondary line-height">*******</p>
                              </div>
                           </div>
                        </div>
                        <div class="col-md-6 col-lg-4">
                           <div class="iq-card iq-card-block iq-card-stretch iq-card-height">
                              <div class="iq-card-body">
                                 <div class="iq-progress-bar progress-bar-vertical iq-bg-warning">
                                    <% if( docter.patients.length == 0 ){ %>
                                       <% var p3 = 0; %>
                                    <% }else { %>
                                       <%   var p3 = docter.completedVaccinations.length / docter.patients.length * 100 %>
                                   <%  } %>
                                   <span class="bg-warning" data-percent="<%=p3%>"></span>
                                   </div>
                                 <span class="line-height-4"> <%= docter.completedVaccinations.length %> </span>
                                 <h4 class="mb-2 mt-2"> Vaccins administrés </h4>
                                 <p class="mb-0 text-secondary line-height">*******</p>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
                  <div class="col-lg-4">
                     <div class="iq-card iq-card-block iq-card-stretch iq-card-height iq-user-profile-block">
                        <div class="iq-card-body">
                           <div class="user-details-block">
                              <div class="user-profile text-center">
                                 <img src="<%=docter.image%>" alt="profile-img" class="avatar-130 img-fluid">
                              </div>
                              <div class="text-center mt-3">
                                 <h4><b> <%= docter.username %> </b></h4>
                                 <p> Specialist <%= docter.specialization %> </p>
                                 <p>  A Rejoint le <%= docter.joined %>   </p>
                                 <a href="/profileDocter" class="btn btn-primary">Profile</a>
                              </div>
                              <hr>
                              <ul class="doctoe-sedual d-flex align-items-center justify-content-between p-0">
                                 <li class="text-center">
                                    <h3> <%- docter.patients.length - docter.completedVaccinations.length %> </h3>
                                    <span>Enfants vaccinés</span>
                                    
                                  </li>
                                  <li class="text-center">
                                    <h3> <%= docter.appointmentFee %> </h3>
                                    <span>Frais de rendez-vous</span>
                                  </li>
                              </ul>
                           </div>
                        </div>
                     </div>
                  </div>   
                  <div class="col-lg-4">
                     <div class="iq-card iq-card-block iq-card-stretch iq-card-height">
                        <div class="iq-card-header d-flex justify-content-between">
                           <div class="iq-header-title">
                              <h4 class="card-title">à venir</h4>
                           </div>
                        </div>
                        <div class="iq-card-body smaill-calender-home">
                           <input type="text" class="flatpicker d-none">
                        </div>
                     </div>
                  </div>
                  <div class="col-lg-4">
                     <div class="iq-card iq-card-block iq-card-stretch iq-card-height-half">
                        <div class="iq-card-body">
                           <h6>Service donné (cette année)</h6>
                           <h3><b>507</b></h3>
                        </div>
                        <div id="wave-chart-7"></div>
                     </div>
                     <div class="iq-card iq-card-block iq-card-stretch iq-card-height-half">
                        <div class="iq-card-body">
                           <h6>Nouvelles installations (cette année)</h6>
                           <h3><b>120</b></h3>
                        </div>
                        <div id="wave-chart-8"></div>
                     </div>
                  </div>              
               </div>
               <div class="row">
                  <div class="col-lg-12">
                     <div class="iq-card iq-card-block iq-card-stretch iq-card-height">
                        <div class="iq-card-header d-flex justify-content-between">
                           <div class="iq-header-title">
                              <h4 class="card-title">Vaccins en cours </h4>
                           </div>
                           <div class="iq-card-header-toolbar d-flex align-items-center">
                              <div class="dropdown">
                                 <span class="dropdown-toggle text-primary" id="dropdownMenuButton5" data-toggle="dropdown">
                                 <i class="ri-more-fill"></i>
                                 </span>
                                 <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton5">
                                    <a class="dropdown-item" href="#"><i class="ri-eye-fill mr-2"></i>Voir</a>
                                    <a class="dropdown-item" href="#"><i class="ri-delete-bin-6-fill mr-2"></i>Supprimer</a>
                                    <a class="dropdown-item" href="#"><i class="ri-pencil-fill mr-2"></i>Modifier</a>
                                    <a class="dropdown-item" href="#"><i class="ri-printer-fill mr-2"></i>Imprimer</a>
                                    <a class="dropdown-item" href="#"><i class="ri-file-download-fill mr-2"></i>Télécharger</a>
                                 </div>
                              </div>
                           </div>
                        </div>
                        <div class="iq-card-body">
                           <div class="table-responsive">
                              <% docter.patients.forEach( eachChild => { %>
                                 <div class="col-sm-6 col-md-3">
                                    <div class="iq-card">
                                       <div class="iq-card-body text-center">
                                          <div class="doc-profile">
                                             <img class="rounded-circle img-fluid avatar-80" src="<%=eachChild.image%>" alt="profile">
                                          </div>
                                          <div class="iq-doc-info mt-3">
                                             <h4>  <%= eachChild.fname %> <%= eachChild.lname %>  </h4>
                                             <ul style="margin-top: 10px;" class="doctoe-sedual d-flex align-items-center justify-content-between p-0">
                                                <li class="text-center">
                                                    <h5> <%= eachChild.age %> </h5>
                                                    <span> Age </span>
                                                </li>
                                                <li class="text-center">
                                                   <h5> <%= eachChild.nextDate %> </h5>
                                                   <span> Appointment </span>
                                                 </li>
                                            </ul>
                                          </div>
                                          <a href="viewChild-<%=eachChild._id%>" class="btn btn-primary">Afficher le profil</a>
                                       </div>
                                    </div>
                                 </div>
                              <% } ) %>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
               
            </div>
            <!-- Footer -->
            <%- include('../partials/Footer') %>
      </body>
</html>
